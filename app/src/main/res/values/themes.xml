<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Twice" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#EA7FA3</item>
        <item name="colorPrimaryVariant">#EA7FA3</item>
        <item name="colorOnPrimary">@color/black</item>
        <item name="android:textColor">#070707</item>
        <item name="android:title">#ea7fa3</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">#ea7fa3</item>
        <!-- Customize your theme here. -->
    </style>

    <!-- Custom theme -->
    <style name="Theme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/white</item>
        <item name="android:statusBarColor">@color/black</item>
    </style>

</resources>